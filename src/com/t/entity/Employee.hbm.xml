<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping ><!-- default-lazy="false" -->

    <class name="com.oaec.entity.Employee">
    	
        <id name="empId" column="emp_id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="age"/>
        <property name="gender" column="gender" /> <!-- not-null="true" unique="true" -->
        <query name="queryAll">
        	<![CDATA[from Employee where gender = :gender]]>
        </query>
    </class>
    <!-- 命名hql标签，俗称query标签 -->
    <query name="queryAll"><!-- 高内聚，低耦合 -->
    	<![CDATA[from Employee where gender = :gender]]>
    </query>

</hibernate-mapping>
